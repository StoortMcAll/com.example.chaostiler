<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="24dp"
    android:height="24dp"
    android:viewportWidth="24"
    android:viewportHeight="24"
    android:shape="rectangle">

    <gradient
        android:type="linear"
        android:centerX="0.25"
        android:startColor="#ff808080"
        android:centerColor="#ff202020"
        android:endColor="#ff808080">
    </gradient>

    <corners
        android:radius="6sp">
    </corners>

    <stroke
        android:width="2dp"
        android:color="@color/button_stroke"/>

</shape>
