<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="24dp"
    android:height="24dp"
    android:viewportWidth="24"
    android:viewportHeight="24"
    android:shape="rectangle">

    <gradient
        android:type="linear"
        android:angle="0"
        android:centerX="0.5"
        android:startColor="#ffaf0000"
        android:centerColor="#ff00af00"
        android:endColor="#ff0000af">

    </gradient>

    <corners
        android:radius="4dp">
    </corners>

    <stroke
        android:width="2dp"
        android:color="@color/button_stroke">
    </stroke>

</shape>
