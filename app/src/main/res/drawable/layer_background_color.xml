<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="24dp"
    android:height="24dp"
    android:viewportWidth="24"
    android:viewportHeight="24">

    <item android:id="@+id/layer_color"
        android:bottom="3dp"
        android:top="3dp"
        android:start="2dp"
        android:end="2dp">

        <shape
            android:shape="rectangle">

            <solid
               android:color="@color/light_grey">
            </solid>

            <corners
                android:radius="4dp">
            </corners>

        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:top="2dp"
        android:start="1dp"
        android:end="1dp"
        android:drawable="@drawable/shape_stroke_blue">
    </item>

</layer-list>