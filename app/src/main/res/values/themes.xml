<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FractalTiler" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/my_yellow</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="myTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="outlineButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textColorHighlight">@color/text_color_highlights</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">6dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/button_stroke</item>
        <item name="backgroundColor">@color/white</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="imageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="filledBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorHighlight">@color/text_color_highlights</item>
        <item name="android:insetLeft">2dp</item>
        <item name="android:insetRight">2dp</item>
        <item name="android:insetTop">2dp</item>
        <item name="android:insetBottom">2dp</item>

        <item name="strokeColor">@color/button_stroke</item>
        <item name="backgroundColor">@color/white</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="Theme.NoTitle" parent="@android:style/Theme.NoTitleBar"></style>

    <style name="Theme.FractalTiler.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="customTabStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <declare-styleable name="SeekbarHint">
        <attr name="hint_text_size" format="dimension"/>
        <attr name="hint_text_color" format="color"/>
    </declare-styleable>

    <style name="Theme.ChaosTiler.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ChaosTiler.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="ThemeOverlay.ChaosTiler.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>