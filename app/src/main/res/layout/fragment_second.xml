<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/constraint_background"
    tools:context=".SecondFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/second_page"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tile_image_generate" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/addNewPaletteConstraint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/constraint_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

            <Button
                android:id="@+id/undo_all_changes"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/undo_all_changes"
                android:layout_marginStart="2dp"
                android:layout_weight="1"
                android:backgroundTint="@color/button_background"
                android:insetTop="2dp"
                android:insetBottom="2dp"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                android:textColorHighlight="@color/text_color_highlights"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="@color/button_stroke" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            android:id="@+id/include_choose_palette"
            layout="@layout/choose_palette"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/addNewPaletteConstraint"
            app:layout_constraintBottom_toTopOf="@id/constraintChooseBlur"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintChooseBlur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/constraint_background"
            app:layout_constraintBottom_toTopOf="@id/data_colour_constraint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/include_choose_palette">

            <Button
                android:id="@+id/blur_left"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                android:backgroundTint="@color/button_background"
                android:contentDescription="@string/perform_blur_on_image_analysing_all_8_surrounding_pixel"
                android:insetTop="2dp"
                android:insetBottom="2dp"
                android:text="@string/_a"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                android:textColorHighlight="@color/text_color_highlights"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@id/blur_right"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="@color/button_stroke" />

            <Button
                android:id="@+id/blur_right"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_weight="1"
                android:backgroundTint="@color/button_background"
                android:contentDescription="@string/perform_blur_on_image_analysing_just_4_cardinal_points_surrounding_pixels"
                android:insetTop="2dp"
                android:insetBottom="2dp"
                android:text="@string/_b"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@id/blur"
                app:layout_constraintStart_toEndOf="@id/blur_left"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="@color/button_stroke" />

            <TextView
                android:id="@+id/blur"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:layout_weight="1"
                android:backgroundTint="@color/button_background"
                android:contentDescription="@string/perform_blur_on_image"
                android:insetTop="2dp"
                android:insetBottom="2dp"
                android:text="@string/choose_blur"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/set_to_zero"
                app:layout_constraintStart_toEndOf="@id/blur_right"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="@color/button_stroke" />

            <Button
                android:id="@+id/set_to_zero"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:layout_weight="1"
                android:backgroundTint="@color/button_background"
                android:contentDescription="@string/reset_the_minimum_hits_per_pixel_to_0"
                android:insetTop="2dp"
                android:insetBottom="2dp"
                android:text="@string/set_to_zero"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/blur"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="@color/button_stroke" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <include
            android:id="@+id/data_colour_constraint"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            layout="@layout/analysis_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/includePaletteScale"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/constraintChooseBlur" />


        <include
            android:id="@+id/includePaletteScale"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            layout="@layout/palette_scaler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/data_colour_constraint"
            app:layout_constraintBottom_toTopOf="@+id/navigate_to" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/navigate_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" >

            <Button
                android:id="@+id/backto_firstfragment"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:backgroundTint="@color/button_background"
                android:insetTop="2dp"
                android:insetBottom="2dp"
                android:text="@string/goto_generate_tile"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                android:textColorHighlight="@color/text_color_highlights"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/to_savewallpaper"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="@color/button_stroke" />

            <Button
                android:id="@+id/to_savewallpaper"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="2dp"
                android:backgroundTint="@color/button_background"
                android:insetTop="2dp"
                android:insetBottom="2dp"
                android:text="@string/goto_save_wallpaper"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                android:textColorHighlight="@color/text_color_highlights"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/backto_firstfragment"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:strokeColor="@color/button_stroke" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/tile_image_generate"
        layout="@layout/tile_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/second_page"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>